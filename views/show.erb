<div>
  <p class="fs-4"><%= CGI.escapeHTML(@title || 'タイトルが未設定です') %></p>
  <p class="text-start fs-5"><%= CGI.escapeHTML(@content || '内容が未設定です').gsub(/\n/, '<br/>') %></p>
</div>
<div class="d-flex justify-content-between mx-auto mb-4" style="width: 400px; margin-top: 200px;">
  <form action="/memos/<%= params[:id] %>/edit" method="get">
    <input type="submit" value="変更" class="btn btn-secondary" style="width: 120px;">
  </form>
  <form action="/memos/<%= params[:id] %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="削除" class="btn btn-secondary" style="width: 120px;">
  </form>
</div>
<div style="text-align: center; margin-top: 50px;">
  <a class="btn btn-secondary" style="width: 180px;" href="/memos">メモ一覧に戻る</a>
</div>
